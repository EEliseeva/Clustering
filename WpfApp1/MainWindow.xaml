                <TextBox x:Name="kmedoid" Height="22" Canvas.Left="141" TextWrapping="Wrap" Text="3" Canvas.Top="144" Width="21" RenderTransformOrigin="0.45,0.435"/>
                <Button Content="k medoid" Canvas.Left="115" Canvas.Top="171" Width="75" Click="kMedoid" Height="19"/>
                <Button Content="agglomerativne" Canvas.Left="215" Canvas.Top="171" Width="75" Click="Aggl" Height="19"/>
                <Button Content="Divisive" Canvas.Left="315" Canvas.Top="171" Width="75" Click="Divise" Height="19"/>
